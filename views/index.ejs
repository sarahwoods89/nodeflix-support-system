<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Nodeflix Support Chatbot</title>
  <style>
      body {
    margin: 0;
    padding: 0;
    background-color: #111;
    color: #fff;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .chatbox {
    border: 1px solid #b30000;
    border-radius: 8px;
    padding: 30px;
    background-color: #1a1a1a;
    width: 500px;
    text-align: center;
    z-index: 1;
  }

    h2 {
      color: #e50914;
      text-align: center;
    }

    textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      resize: none;
    }

    button {
      background-color: #e50914;
      color: white;
      border: none;
      padding: 10px 30px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      margin: 10px auto 0;
      display: block;
    }

    button:hover {
      background-color: #b00610;
    }

    .bot-reply {
      background: #333;
      padding: 15px;
      margin-top: 20px;
      border-radius: 8px;
      color: white;
    }

    /* Netflix Style Animation */
    #intro-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    animation: colorCycle 2s ease-in-out forwards;
  }

  #intro-text {
    color: white;
    font-size: 50px;
    font-family: 'Helvetica Neue', sans-serif;
    animation: fadeInOut 2s forwards, scaleUp 2s forwards;
  }

  /* üñåÔ∏è Flashier colors faster */
  @keyframes colorCycle {
    0% { background-color: black; }
    10% { background-color: #8e0000; }
    30% { background-color: #730099; }
    50% { background-color: #0033cc; }
    70% { background-color: #cc6600; }
    90% { background-color: #ff0000; }
    100% { background-color: black; }
  }

  /* üåü Fade and shrink out */
  @keyframes fadeInOut {
    0% { opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { opacity: 0; }
  }

  /* üé• Optional: Scale up text while fading out */
  @keyframes scaleUp {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(0.8); }
  }
</style>
</head>

<body>

  <!-- Intro Screen -->
  <div id="intro-screen">
    <h1 id="intro-text">NODEFLIX SUPPORT SYSTEM</h1>
  </div>

  <!-- Main Chatbox -->
  <div class="chatbox">
    <h2>Nodeflix Support Chatbot</h2>
    <form id="chat-form">
      <textarea name="user_message" rows="4" placeholder="Type your message..." required></textarea>
      <button type="submit">Send</button>
    </form>

    <div id="chat-response"></div>
  </div>

  <script>
    const form = document.getElementById('chat-form');
    const responseDiv = document.getElementById('chat-response');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const user_message = form.user_message.value;

      try {
        const res = await fetch('/chat', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'api-key': 'supersecretapikey123'  // API key that i missed to hopefully fix my errors I'm getting. This API has to match the app.js one
          },
          body: JSON.stringify({ user_message })
        });

        if (!res.ok) throw new Error('Network response was not ok');

        const data = await res.json();
        responseDiv.innerHTML = `<div class="bot-reply"><strong>Bot:</strong> ${data.bot_reply}</div>`;
        form.user_message.value = '';
      } catch (error) {
        console.error('Error:', error);
        responseDiv.innerHTML = `<div class="bot-reply"><strong>Bot:</strong> Oops, something went wrong.</div>`;
      }
    });

    // Hide intro screen after 3s
    window.addEventListener('load', function() {
      setTimeout(function() {
        document.getElementById('intro-screen').style.display = 'none';
      }, 3000);
    });
  </script>

</body>
</html>

